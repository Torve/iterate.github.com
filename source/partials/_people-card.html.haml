.cards.has-large-padding-top-bottom
  - employees.each do | e |
    - employee = e[1] # moves all object data into an array

    .employee-card
      .employee-basic-info
        .employee-card-header
          %img{:class => 'mugshot', :title => employee.name, :src => image_path('mugshots/' + employee.mugshot)}
          %ul.card-content.text-centered
            %li.employee-name= employee.name
            %li.employee-title= employee.title

        %ul.card-content.text-centered
          %li.contact-details
            %a{:href => 'mailto:' + employee.email}= employee.email
          %li.contact-details= employee.phone

          %ul.horizontal-list
            - if employee.twitter.length > 0
              %li
                %a{:href => employee.twitter, :class => 'icon'}
                  %i.fa.fa-twitter
            - if employee.linkedin.length > 0
              %li
                %a{:href => employee.linkedin, :class => 'icon'}
                  %i.fa.fa-linkedin-square
            - if employee.github.length > 0
              %li
                %a{:href => employee.github, :class => 'icon'}
                  %i.fa.fa-github
      .employee-extended-info.is-hidden.animated.slideInLeft
        .inner-section
          - if employee.bio.length > 3
            %p= employee.bio
          - else
            - 2.times do
              %p= lorem.sentences 2
          .skills
            %i.fa.fa-tags
            %span= employee.skills.join(', ')

          .clients
            %i.fa.fa-tags
            %span= employee.clients.join(', ')

          - work_experience = (Date.today.year.to_i - employee.year.to_i).to_s + ' Ã¥r med arbeidserfaring'

          .experience
            %i.fa.fa-briefcase
            = work_experience